<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ca.digitalcave.logic.data.LogicMapper">

	<select id="selectScenarios" resultType="hashmap">
select id, name from scenario
	</select>
	
	<select id="selectResourceType" resultType="hashmap">
select id, name from resource_type where scenario_id = #{scenario}
	</select>
	
	<select id="selectResources" resultType="hashmap">
select id name from resource where type_id = #{type}
	</select>
	
</mapper>
