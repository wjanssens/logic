<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="create school" author="wj">
		<createTable tableName="school">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" primaryKeyName="pk_school"/>
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>
	
	<changeSet id="create semester" author="wj">
		<createTable tableName="semester">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" primaryKeyName="pk_semester"/>
			</column>
			<column name="school_id" type="int">
				<constraints foreignKeyName="fk_semester_school" references="school(id)"/>
			</column>
			<column name="name" type="varchar(25)" remarks="i.e. 2015-1">
				<constraints nullable="false"/>
			</column>
			<column name="blocks" type="varchar(25)" remarks="the number of blocks in the semester"/>
		</createTable>
	</changeSet>
	
	<changeSet id="create teacher" author="wj">
		<createTable tableName="teacher">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" primaryKeyName="pk_teacher"/>
			</column>
			<column name="semester_id" type="int">
				<constraints foreignKeyName="fk_teacher_semester" references="semester(id)"/>
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false"/>
			</column>
			<column name="min" type="smallint" remarks="minimum allocation in blocks"/>
			<column name="max" type="smallint" remarks="maximum allocation in blocks"/>
		</createTable>
	</changeSet>
	
	<changeSet id="create class" author="wj">
		<createTable tableName="class">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" primaryKeyName="pk_class"/>
			</column>
			<column name="semester_id" type="int">
				<constraints foreignKeyName="fk_class_semester" references="semester(id)"/>
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false"/>
			</column>
			<column name="blocks" type="smallint" remarks="number of blocks to occupy"/>
		</createTable>
	</changeSet>
	
	<changeSet id="create room" author="wj">
		<createTable tableName="room">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" primaryKeyName="pk_room"/>
			</column>
			<column name="semester_id" type="int">
				<constraints foreignKeyName="fk_room_semester" references="semester(id)"/>
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>
	
	<changeSet id="create student" author="wj">
		<createTable tableName="student">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" primaryKeyName="pk_student"/>
			</column>
			<column name="semester_id" type="int">
				<constraints foreignKeyName="fk_student_semester" references="semester(id)"/>
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>